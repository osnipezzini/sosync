<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SOSync.Mobile.ViewModels"
             xmlns:models="clr-namespace:SOSync.Abstractions.Models;assembly=SOSync.Abstractions"
             xmlns:converters="clr-namespace:SOSync.Mobile.Converters"         
             xmlns:views="clr-namespace:SOSync.Mobile.Views"
             x:Class="SOSync.Mobile.Pages.SyncPage"
             x:DataType="vm:SyncViewModel"
             Title="Status das sincronias">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:StatusToImageConverter x:Key="StatusToImage"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ListView HasUnevenRows="true"
              IsRefreshing = "{Binding IsBusy}"
              HorizontalOptions="StartAndExpand"
              ItemSelected="Handle_ItemSelected"
              ItemsSource="{Binding Syncs}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <views:SyncView />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>